#
# Project settings
#

# Target binary name (default: project's directory name)
BINARY       = mftest
# Projects directoryes (default: current directory)
BUILDDIR     = build
BINARYDIR    = $(BUILDDIR)/$(PROJECT)
SOURCEDIR    = .
OBJECTDIR    = $(BUILDDIR)/$(PROJECT)/obj
DEPENDDIR    = $(BUILDDIR)/$(PROJECT)/dep
# Space delimited list of source files (default: *.cpp files in SOURCEDIR)
#SOURCES      = 
# Terminal settings (default: run without terminal)
TERMNAME     = 
TERMOPTIONS  = 

#
# Preprocessor, compiler, linker settings
#

# Compiler flags
CXXFLAGS     = -pipe -pedantic -Wall -O2 -m64
# Preprocessor flags
CPPFLAGS     = 
# Macros definitions (space delimited)
DEFINITIONS  = NDEBUG
# Include files path (space delimited)
INCLUDEPATH  = .
# Linker flags
LDFLAGS      = 
# Dynamic libraryes path (space delimited)
LIBRARYPATH  = 
# Dynamic libraryes (space delimited)
LIBRARYES    = 

distclean : cleanhook

.PHONY : cleanhook
cleanhook:
	@if [ `find $(BUILDDIR) -type f | wc -l` == "0" ]; then \
	rm -rfv $(BUILDDIR); \
	fi
